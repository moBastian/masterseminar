                  achievementHash["a2"][0] = true;
              }
              break;
          case "Geographietest":
              if(achievementHash["a3"][0]!= "true") {
                  alert("Sie haben ein neues Abzeichen bekommen!");
                  achievementHash["a3"][0] = true;
              }
              break;
          case "Geschichtstest":
