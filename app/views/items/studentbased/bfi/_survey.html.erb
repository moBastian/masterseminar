<table align="center" style="margin-top: 10px">
  <thead style="border-bottom: solid orange 2px; border-top: solid orange 4px;background-color: lightgray">
  <tr>
    <th></th>
    <th style="text-align: center; font-size: 2.1em">trifft überhaupt nicht zu</th>
    <th style="text-align: center;font-size: 2.1em;padding-left: 15px">trifft eher nicht zu</th>
    <th style="text-align: center;font-size: 2.1em;padding-left: 15px">weder noch</th>
    <th style="text-align: center;font-size: 2.1em;padding-left: 15px">eher zutreffend</th>
    <th style="text-align: center;font-size: 2.1em;padding-left: 15px">trifft voll und ganz zu</th>
  </tr>

  </thead>
  <tbody style="border-bottom: solid orange  4px">
  <%count =0%>
  <%@measurement.assessment.test.items.each_with_index do |item, i|%>
      <%nextItem = @measurement.assessment.test.items[i+1]%>
      <%if(nextItem.nil?)%>
      <%else%>
          <form>
            <tr >
              <td style="font-size: 2.1em"><%="("+(count+1).to_s+") "+item.itemtext%></td>
              <td style="text-align: center" ><div class="radio"><label><input type="radio" id="<%="1"+ count.to_s %>" name="<%=count%>">1</label></div></td>
              <td style="text-align: center" ><div class="radio"><label><input type="radio" id="<%="2"+ count.to_s %>" name="<%=count%>">2</label></div></td>
              <td style="text-align: center" ><div class="radio"><label><input type="radio" id="<%="3"+ count.to_s %>" name="<%=count%>">3</label></div></td>
              <td style="text-align: center" ><div class="radio"><label><input type="radio" id="<%="4"+ count.to_s %>" name="<%=count%>">4</label></div></td>
              <td style="text-align: center" ><div class="radio"><label><input type="radio" id="<%="5"+ count.to_s %>" name="<%=count%>">5</label></div></td>
            </tr>
          </form>
          <%count = count+1%>
      <%end%>
  <%end%>
  </tbody>
</table>

