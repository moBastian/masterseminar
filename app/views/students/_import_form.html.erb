<% unless alert.blank? %>
    <div class="alert alert-danger">
        <%= alert %>
    </div>
<% end %>

<%= form_for([@user, @group, @student], :html => {:class => "form-inline"}) do |f| %>
    <div class="form-group">
      <%= f.label "Datei", :class => "sr-only" %>
      <%= f.file_field "file" %>
    </div>

  <div class="form-group">
    <%= f.submit "Hochladen", :class => "btn btn-primary" %>
  </div>
<% end %>
