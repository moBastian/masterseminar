var chart<%=test%> = c3.generate({
    bindto: '#chart<%=test%>',
    data: {
        x: 'x',
        xFormat:'%Y-%m-%d %H:%M:%S %Z',
        columns: [
            ['x',
                <% results.each do |r| %>
                '<%= r.measurement.date.to_time %>',
                <% end %>
            ],
            ['student',
                <% max = 0 %>
                <% results.each do |r| %>
                  <%if !r.measurement.max.nil? && r.measurement.max > max %>
                    <% max = r.measurement.max %>
                  <% end %>
                <% unless r.nil? %>
                <%= r.score.nil? ? "null" : r.score %>
                <% else %>
                null
                <% end %>,
                <% end %>
            ]
        ],
        names: {
            student: '<%= student.name %>'
        },
    },
    color: {
        pattern: ['#46B8DA']
    },
    axis: {
        x: {
            type: 'timeseries',
            tick: {
                fit: true,
                format: "%e %b %y"
            },
            label: {
                text: 'Testzeitpunkte',
                position: 'outer-left'
            }
        },
        y: {
            label: {
                text: 'Anzahl richtiger Items',
                position: 'outer-middle'
            },
            min: 1,
            max: <%= max %>
        }
    },
    line: {
        connectNull: true
    },
    legend: {
        hide: false
    }
});