            <%= link_to 'ZurÃ¼ck', frontend_path, class:"btn btn-lg btn-warning"%>

            <%= f.submit "Feedback abschicken",  class: "btn btn-lg btn-primary", data: { confirm: 'Feedback speichern?' }%>
          </div>
          <div>
          </div>
      <% end %>
    </div>

  </div>
</div>