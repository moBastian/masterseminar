<% if @test.errors.any? %>
    <div class="alert alert-danger">
      <% @test.errors.full_messages.each do |message| %>
          <%= message %><br/>
      <% end %>
    </div>
<% end %>

<%= form_for(@test.becomes(Test), :html => {:class => "form"}, :data => {:remote => true}) do |f| %>

    <% if @test.errors[:name].any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
        <%= f.label :name, :class => "control-label" %>
        <%= f.text_field :name, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :short_info, :class => "control-label" %>
      <%= f.text_field :short_info, :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :info, :class => "control-label" %>
        <%= f.text_area :info, :class => "form-control" %>
    </div>
    <% if @test.errors[:subject].any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
        <%= f.label :subject, :class => "control-label" %>
        <%= f.text_field :subject, :class => "form-control" %>
    </div>
    <% if @test.errors[:construct].any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
    <%= f.label :construct, :class => "control-label" %>
    <%= f.text_field :construct, :class => "form-control" %>
    </div>
    <% if @test.errors[:level].any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
    <%= f.label :level, :class => "control-label" %>
    <%= f.text_field :level, :class => "form-control" %>
    </div>

  <div class="form-group">
    <%= f.submit :class => "btn btn-primary" %>

    <%= link_to "Abbrechen", '#', :class => "btn btn-default", :onclick => "cancelForm()"%>
  </div>

<% end %>

<script>
    function cancelForm() {
        $('#t<%=@test.id%>').html("<%= escape_javascript(render(file: 'tests/_show', :locals =>  {:test => @test})) %>");
    }
</script>