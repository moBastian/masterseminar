<% if @material.errors.any? %>
    <div class="alert alert-danger">
      <% @material.errors.full_messages.each do |message| %>
          <%= message %><br/>
      <% end %>
    </div>
<% end %>

<%= form_for(@material.becomes(Material), :html => {:class => "form"}, :data => {:remote => true}) do |f| %>

    <% if @material.errors[:block].any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
    <%= f.label :block, :class => "control-label" %>
    <%= f.text_field :block, :class => "form-control" %>
    </div>

    <% if @material.errors[:exercisetype].any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
    <%= f.label :exercisetype, :class => "control-label" %>
    <%= f.text_field :exercisetype, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :exerciseinfo, :class => "control-label" %>
      <%= f.text_area :exerciseinfo, :class => "form-control" %>
    </div>

    <% if @material.errors[:subject].any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
    <%= f.label :subject, :class => "control-label" %>
    <%= f.text_field :subject, :class => "form-control" %>
    </div>

    <% if @material.errors[:construct].any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
    <%= f.label :construct, :class => "control-label" %>
    <%= f.text_field :construct, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>

      <%= link_to "Abbrechen", '#', :class => "btn btn-default", :onclick => "cancelForm()"%>
    </div>

<% end %>

<script>
    function cancelForm() {
        $('#ma<%=@material.id%>').html("<%= escape_javascript(render(file: 'materials/_show', :locals =>  {:material => @material})) %>");
    }
</script>